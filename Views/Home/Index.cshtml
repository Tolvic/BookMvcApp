@model IEnumerable<BookMvcApp.Models.Book>

@{
    ViewData["Title"] = "Book Library - Home";
}

<div class="container mt-4">
    <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
        <h1 class="display-4">Welcome to Your Book Library</h1>
        <p class="lead">Manage your personal collection of books with ease. Track what you've read and discover new titles to add to your library.</p>
        <a asp-controller="Books" asp-action="Create" class="btn btn-light btn-lg">Add Your First Book</a>
    </div>

    @if (Model.Any())
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Recent Books</h2>
            <a asp-controller="Books" asp-action="Index" class="btn btn-outline-primary">View All Books</a>
        </div>

        <div class="row">
            @foreach (var item in Model.Take(6))
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">
                                <strong>Author:</strong> @item.Author<br>
                                @if (!string.IsNullOrEmpty(item.Genre))
                                {
                                    <strong>Genre:</strong> @item.Genre<br>
                                }
                                <span class="badge @(item.IsRead ? "bg-success" : "bg-secondary")">
                                    @(item.IsRead ? "Read" : "Not Read")
                                </span>
                            </p>
                            <div class="mt-auto">
                                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h3 class="text-muted">Your library is empty</h3>
            <p class="text-muted">Start building your collection by adding your first book!</p>
        </div>
    }
</div>