@model IEnumerable<BookMvcApp.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Book Library</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Book
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text">
                                <strong>Author:</strong> @Html.DisplayFor(modelItem => item.Author)<br>
                                @if (!string.IsNullOrEmpty(item.Genre))
                                {
                                    <strong>Genre:</strong> @Html.DisplayFor(modelItem => item.Genre)<br>
                                }
                                @if (item.PublishedDate.HasValue)
                                {
                                    <strong>Published:</strong> @item.PublishedDate.Value.ToString("MMM yyyy")<br>
                                }
                                <span class="badge @(item.IsRead ? "bg-success" : "bg-secondary")">
                                    @(item.IsRead ? "Read" : "Not Read")
                                </span>
                            </p>
                            <div class="mt-auto">
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h3 class="text-muted">No books in your library yet</h3>
            <p class="text-muted">Start building your collection by adding your first book!</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">Add Your First Book</a>
        </div>
    }
</div>
