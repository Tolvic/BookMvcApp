@model BookMvcApp.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">Delete Book</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Warning!</strong> Are you sure you want to delete this book? This action cannot be undone.
                    </div>
                    
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Title)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Author)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Author)</dd>

                        @if (!string.IsNullOrEmpty(Model.Genre))
                        {
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Genre)</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Genre)</dd>
                        }

                        @if (Model.PublishedDate.HasValue)
                        {
                            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.PublishedDate)</dt>
                            <dd class="col-sm-9">@Model.PublishedDate.Value.ToString("MMMM dd, yyyy")</dd>
                        }

                        <dt class="col-sm-3">Reading Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.IsRead ? "bg-success" : "bg-secondary")">
                                @(Model.IsRead ? "Read" : "Not Read")
                            </span>
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Book</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
